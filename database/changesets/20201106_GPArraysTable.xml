                        http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="sehsan@broadinstitute.org"
               dbms="postgresql"
               id="20201106"
               logicalFilePath="20201106_GPArraysTable.xml">
        <comment>
            the GPArrays table schema
        </comment>
        <sql>
            CREATE TYPE GPArrays AS (
                id                          bigint,      -- just an unique id
                analysis_version_number     bigint,      -- input to the workflow (PK 1/2)
                chip_well_barcode           text,        -- input to the workflow (PK 2/2)
                status                      text,        -- Cromwell workflow status
                updated                     timestamptz, -- status update time
                uuid                        text,        -- Cromwell workflow UUID
                inputs                      text         -- JSON string of non-default workflow inputs
            )
        </sql>
    </changeSet>
</databaseChangeLog>

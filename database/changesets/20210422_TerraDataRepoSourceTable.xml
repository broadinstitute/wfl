               dbms="postgresql"
               id="20210422"
               logicalFilePath="20210422_TerraDataRepoSourceTable.xml"
               runInTransaction="false">
        <comment>
            the 'Terra DataRepo' source table schema
        </comment>
        <sql>
            CREATE TYPE TerraDataRepo AS (
                id              bigint,      -- unique to this table
                dataset         text,        -- the id of the TDR dataset
                dataset_table   text,        -- the name of the dataset table
                snapshot        text,        -- name of a column in table containing orderable and strictly increasing data
                details         text,        -- the identifier of the source details table
                last_checked    timestamptz  -- a timestamp used for monitor
            )
        </sql>
    </changeSet>
</databaseChangeLog>

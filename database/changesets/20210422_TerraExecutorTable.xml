<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="chengche@broadinstitute.org"
               dbms="postgresql"
               id="20210422"
               logicalFilePath="20210422_TerraExecutorTable.xml"
               runInTransaction="false">
        <comment>
            the 'Terra' executor table schema
        </comment>
        <createTable tableName="TerraExecutor">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="workspace" type="text"
                    remarks="the fully-qualified 'Namespace/Name' of the Terra workspace to execute workflows in">
                <constraints nullable="false"/>
            </column>
            <column name="method_configuration" type="text"
                    remarks="the fully-qualified 'Namespace/Name' of the method configuration used to create submissions">
                <constraints nullable="false"/>
            </column>
            <column name="method_configuration_version" type="text"
                    remarks="the version of the method configuration">
                <constraints nullable="false"/>
            </column>
            <column name="details" type="text"
                    remarks="the identifier of the executor details table">
                <constraints nullable="false"/>
            </column>
            <column name="from_source" type="text"
                    remarks="mapping of how to coerce the output of source to executor in serialized EDN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>

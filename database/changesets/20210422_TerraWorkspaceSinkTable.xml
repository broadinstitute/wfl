<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="chengche@broadinstitute.org"
               dbms="postgresql"
               id="20210422"
               logicalFilePath="20210422_TerraWorkspaceSinkTable.xml"
               runInTransaction="false">
        <comment>
            the 'Terra Workspace' sink table schema
        </comment>
        <createTable tableName="TerraWorkspaceSink">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="workspace" type="text"
                    remarks="the fully-qualified 'Namespace/Name' of the Terra workspace to execute workflows in">
                <constraints nullable="false"/>
            </column>
            <column name="entity" type="text"
                    remarks="the entity type to import data from the source as">
                <constraints nullable="false"/>
            </column>
            <column name="from_outputs" type="text"
                    remarks="mapping of how to coerce the output of source to executor in serialized EDN">
                <constraints nullable="false"/>
            </column>
            <column name="details" type="text"
                    remarks="the identifier of the executor details table">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>

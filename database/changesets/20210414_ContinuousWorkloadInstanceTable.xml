    <changeSet author="chengche@broadinstitute.org"
               dbms="postgresql"
               id="20210414"
               logicalFilePath="20210414_ContinuousWorkloadInstanceTable.xml"
               runInTransaction="false">
        <sql>
            CREATE TYPE ContinuousWorkloadInstance AS (
                id             bigint,      -- unique to this table
                source_type    source,      -- source type
                source_item    text,        -- id of the source instance
                executor_type  executor,    -- executor type
                executor_item  text,        -- id of the executor instance
                sink_type      sink,        -- sink type
                sink_item      text,        -- id of the sink instance
                updated        timestamptz  -- status update time
            )
            <comment>
                the ContinuousWorkloadInstance table schema
            </comment>
        </sql>
    </changeSet>
</databaseChangeLog>

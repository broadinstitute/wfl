<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="chengche@broadinstitute.org"
               dbms="postgresql"
               id="20210422"
               logicalFilePath="20210422_ContinuousWorkloadTable.xml"
               runInTransaction="false">
        <createTable tableName="ContinuousWorkload">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="source_type" type="source"
                    remarks="Type of this source.">
                <constraints nullable="false"/>
            </column>
            <column name="source_item" type="text"
                    remarks="Link to the concrete source record.">
                <constraints nullable="false"/>
            </column>
            <column name="executor_type" type="executor"
                    remarks="Type of this executor.">
                <constraints nullable="false"/>
            </column>
            <column name="executor_item" type="text"
                    remarks="Link to the concrete executor record.">
                <constraints nullable="false"/>
            </column>
            <column name="sink_type" type="sink"
                    remarks="Type of this sink.">
                <constraints nullable="false"/>
            </column>
            <column name="sink_item" type="text"
                    remarks="Link to the concrete sink record.">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamptz"
                    defaultValueComputed="now()"
                    remarks="When was this workload updated?">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>

               runInTransaction="false">
        <comment>
            the Sarscov2IlluminaFull table schema
        </comment>
        <sql>
            CREATE TYPE Sarscov2IlluminaFull AS (
            id                          bigint,      -- just an unique id
            dataset_id                  text,        -- Terra DataRepo dataset id
            snapshot_job_id             text,        -- Terra DataRepo snapshot creation job id
            snapshot_id                 text,        -- Terra DataRepo snapshot id
            datarepo_row_id             text,        -- Unique id to identify a row in snapshot
            submission_id               text,        -- FireCloud submissionId
            workflow_id                 text,        -- FireCloud workflow id
            status                      text,        -- FireCloud workflow status
            updated                     timestamptz  -- status update time
            )
        </sql>
    </changeSet>
</databaseChangeLog>